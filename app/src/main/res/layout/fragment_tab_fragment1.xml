<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Tab 1"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TableLayout
        android:id="@+id/infoTable"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="top|start"
        android:orientation="horizontal"
        android:visibility="visible">

        <TableRow
            android:id="@+id/infoAddressRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/infoAddressHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/infoAddressData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/infoPhoneRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/infoPhoneHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/infoPhoneData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/infoPriceRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/infoPriceHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Level"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/infoPriceData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/infoRatingRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/infoRatingHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textStyle="bold"
                android:typeface="serif" />

            <RatingBar
                android:id="@+id/infoRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:paddingLeft="5dp"
                android:stepSize="0.5" />
        </TableRow>

        <TableRow
            android:id="@+id/infoGoogleRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/infoGoogleHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Page"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/infoGoogleData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:id="@+id/infoWebsiteRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/infoWebsiteHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/infoWebsiteData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:paddingLeft="5dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>